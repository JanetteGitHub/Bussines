@model IEnumerable<Bussines.Common.Models.BandS>

@{
    ViewBag.Title = "Index";
}

<h2>Productos y Servicios</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create",new { },new {@class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublishOn)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.ImagePath))
            {
                <img src="@Url.Content(item.ImagePath)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remarks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublishOn)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.BandSId },new {@class="btn btn-warning" }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.BandSId },new {@class="btn btn-info" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.BandSId },new {@class="btn btn-danger" })
        </td>
    </tr>
}

</table>
